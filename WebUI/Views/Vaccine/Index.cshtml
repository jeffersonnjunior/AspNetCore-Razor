@{
    ViewData["Title"] = "Vacinas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-3">Sistema de Vacinas</h2>
            <p class="text-muted mb-3">Gerencie as vacinas do sistema de saúde</p>
        </div>
    </div>

    <div class="row">
        <!-- Add Vaccine Card -->
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card h-100 vaccine-card-small">
                <div class="card-body d-flex flex-column text-center p-3">
                    <div class="vaccine-icon-small mb-2">
                        <i class="fas fa-plus-circle fa-2x text-success"></i>
                    </div>
                    <h6 class="card-title mb-2">Adicionar Vacina</h6>
                    <p class="card-text text-muted small mb-2">Cadastre uma nova vacina</p>
                    <div class="mt-auto">
                        <a href="@Url.Action("Add", "Vaccine")" class="btn btn-success btn-sm">
                            <i class="fas fa-plus me-1"></i>
                            Adicionar
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Print Vaccines Card -->
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card h-100 vaccine-card-small">
                <div class="card-body d-flex flex-column text-center p-3">
                    <div class="vaccine-icon-small mb-2">
                        <i class="fas fa-print fa-2x text-primary"></i>
                    </div>
                    <h6 class="card-title mb-2">Imprimir Vacinas</h6>
                    <p class="card-text text-muted small mb-2">Gere relatórios das vacinas</p>
                    <div class="mt-auto">
                        <button class="btn btn-primary btn-sm" disabled>
                            <i class="fas fa-print me-1"></i>
                            Imprimir
                        </button>
                        <small class="d-block text-muted mt-1" style="font-size: 0.7rem;">Em desenvolvimento</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>