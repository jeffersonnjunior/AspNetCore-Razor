@{
    ViewData["Title"] = "Adicionar Vacina";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-syringe me-2"></i>
                        Cadastrar Nova Vacina
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Add">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Nome da Vacina *</label>
                                    <input type="text" class="form-control" id="name" name="Name" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="manufacturer" class="form-label">Fabricante</label>
                                    <input type="text" class="form-control" id="manufacturer" name="Manufacturer">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="batch" class="form-label">Lote *</label>
                                    <input type="text" class="form-control" id="batch" name="Batch" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="manufacturingDate" class="form-label">Data de Fabricação</label>
                                    <input type="date" class="form-control" id="manufacturingDate" name="ManufacturingDate">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="expirationDate" class="form-label">Data de Validade *</label>
                                    <input type="date" class="form-control" id="expirationDate" name="ExpirationDate" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="availableDoses" class="form-label">Doses Disponíveis</label>
                                    <input type="number" class="form-control" id="availableDoses" name="AvailableDoses" min="0">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="storageTemperature" class="form-label">Temperatura de Armazenamento (°C)</label>
                                    <input type="number" class="form-control" id="storageTemperature" name="StorageTemperature" step="0.1">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Observações</label>
                            <textarea class="form-control" id="notes" name="Notes" rows="3" placeholder="Informações adicionais sobre a vacina"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Vaccine")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>
                                Salvar Vacina
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>