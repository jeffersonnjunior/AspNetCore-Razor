@{
    ViewData["Title"] = "Adicionar Vacina";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card vaccine-form-card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-syringe me-2"></i>
                        Cadastrar Nova Vacina
                    </h5>
                </div>
                <div class="card-body p-0">
                    <form method="post" asp-action="Add">
                        <!-- Nome da Vacina -->
                        <div class="form-field-container">
                            <label class="form-field-label">Nome da Vacina</label>
                            <div class="form-field-content">
                                <input type="text" class="form-control-custom" id="name" name="Name" required>
                            </div>
                        </div>

                        <!-- Fabricante -->
                        <div class="form-field-container">
                            <label class="form-field-label">Fabricante</label>
                            <div class="form-field-content">
                                <input type="text" class="form-control-custom" id="manufacturer" name="Manufacturer">
                            </div>
                        </div>

                        <!-- Lote -->
                        <div class="form-field-container">
                            <label class="form-field-label">Lote</label>
                            <div class="form-field-content">
                                <input type="text" class="form-control-custom" id="batch" name="Batch" required>
                            </div>
                        </div>

                        <!-- Data de Fabricação -->
                        <div class="form-field-container">
                            <label class="form-field-label">Data de Fabricação</label>
                            <div class="form-field-content">
                                <input type="date" class="form-control-custom" id="manufacturingDate" name="ManufacturingDate">
                            </div>
                        </div>

                        <!-- Data de Validade -->
                        <div class="form-field-container">
                            <label class="form-field-label">Data de Validade</label>
                            <div class="form-field-content">
                                <input type="date" class="form-control-custom" id="expirationDate" name="ExpirationDate" required>
                            </div>
                        </div>

                        <!-- Doses Disponíveis -->
                        <div class="form-field-container">
                            <label class="form-field-label">Doses Disponíveis</label>
                            <div class="form-field-content">
                                <input type="number" class="form-control-custom" id="availableDoses" name="AvailableDoses" min="0">
                            </div>
                        </div>

                        <!-- Temperatura de Armazenamento -->
                        <div class="form-field-container">
                            <label class="form-field-label">Temperatura de Armazenamento (°C)</label>
                            <div class="form-field-content">
                                <input type="number" class="form-control-custom" id="storageTemperature" name="StorageTemperature" step="0.1">
                            </div>
                        </div>

                        <!-- Observações -->
                        <div class="form-field-container border-bottom-0">
                            <label class="form-field-label">Observações</label>
                            <div class="form-field-content">
                                <textarea class="form-control-custom" id="notes" name="Notes" rows="3" placeholder="Informações adicionais sobre a vacina"></textarea>
                            </div>
                        </div>

                        <div class="form-actions">
                            <a href="@Url.Action("Index", "Vaccine")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>
                                Salvar Vacina
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>