@model Application.Dtos.VaccineDocumentDtos.VaccineDocumentCreateDto

@{
    ViewData["Title"] = "Nova Vacinação";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="card p-4 shadow-sm bg-light">
    <div class="mb-3">
        <label asp-for="VaccineName" class="form-label fw-semibold"></label>
        <input asp-for="VaccineName" class="form-control" />
        <span asp-validation-for="VaccineName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Manufacturer" class="form-label fw-semibold"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AdministrationDate" class="form-label fw-semibold"></label>
        <input asp-for="AdministrationDate" type="date" class="form-control" />
        <span asp-validation-for="AdministrationDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LotNumber" class="form-label fw-semibold"></label>
        <input asp-for="LotNumber" class="form-control" />
        <span asp-validation-for="LotNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PatientId" class="form-label fw-semibold"></label>
        <select asp-for="PatientId" class="form-control" id="patient-autocomplete">
            <option value="">Selecione um paciente</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>



    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $.ajax({
                url: '/Vaccination/SearchPatients',
                success: function (data) {
                    var $select = $("#patient-autocomplete");
                    $select.empty();
                    $select.append('<option value="">Selecione um paciente</option>');
                    data.forEach(function (patient) {
                        $select.append('<option value="' + patient.id + '">' + patient.name + '</option>');
                    });
                }
            });
        });
    </script>
}