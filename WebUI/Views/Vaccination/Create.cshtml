@model Application.Dtos.VaccineDocumentDtos.VaccineDocumentCreateDto

@{
    ViewData["Title"] = "Nova Vacinação";
}

<style>
    .form-horizontal {
        margin: 40px 0 0 32px;
        max-width: 700px;
    }
    .form-horizontal h2 {
        font-weight: 700;
        color: #2563eb;
        margin-bottom: 32px;
        font-size: 1.5rem;
        text-align: left;
    }
    .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 18px;
        gap: 18px;
    }
    .form-label {
        min-width: 160px;
        font-weight: 500;
        color: #34495e;
        font-size: 1rem;
        margin-bottom: 0;
    }
    .form-control {
        border-radius: 8px;
        padding: 0.6rem 1rem;
        border: 1px solid #ced4da;
        transition: border-color 0.2s, box-shadow 0.2s;
        background: #fff;
        font-size: 1rem;
        flex: 1;
    }
    .form-control:focus {
        border-color: #2563eb;
        box-shadow: 0 0 8px rgba(37,99,235,0.10);
        background: #f8fafc;
    }
    .text-danger {
        font-size: 0.95rem;
        margin-left: 10px;
    }
    .btn-primary {
        padding: 0.7rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        background: linear-gradient(90deg, #2563eb 80%, #0d6efd 100%);
        border: none;
        box-shadow: 0 2px 8px rgba(13,110,253,0.10);
        transition: background 0.2s;
        font-size: 1.08rem;
        margin-top: 16px;
    }
    .btn-primary:hover {
        background: linear-gradient(90deg, #0d6efd 80%, #2563eb 100%);
    }
</style>

<div class="form-horizontal">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create" method="post">
        <div class="form-row">
            <label asp-for="VaccineName" class="form-label"></label>
            <input asp-for="VaccineName" class="form-control" />
            <span asp-validation-for="VaccineName" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="Manufacturer" class="form-label"></label>
            <input asp-for="Manufacturer" class="form-control" />
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="AdministrationDate" class="form-label"></label>
            <input asp-for="AdministrationDate" type="date" class="form-control" />
            <span asp-validation-for="AdministrationDate" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="LotNumber" class="form-label"></label>
            <input asp-for="LotNumber" class="form-control" />
            <span asp-validation-for="LotNumber" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="PatientId" class="form-label"></label>
            <select asp-for="PatientId" class="form-control" id="patient-autocomplete">
                <option value="">Selecione um paciente</option>
            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $.ajax({
                url: '/Vaccination/SearchPatients',
                success: function (data) {
                    var $select = $("#patient-autocomplete");
                    $select.empty();
                    $select.append('<option value="">Selecione um paciente</option>');
                    data.forEach(function (patient) {
                        $select.append('<option value="' + patient.id + '">' + patient.name + '</option>');
                    });
                }
            });
        });
    </script>
}